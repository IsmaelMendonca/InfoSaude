<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:id="@+id/ll_est_root_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Estabelecimento: "
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_est_nome_estabelecimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOME DO ESTABELECIMENTO"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CNPJ: "
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_est_cnpj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CNPJ"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefone: "
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_est_telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TELEFONE"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/corTemaAplicativo"/>
</LinearLayout>