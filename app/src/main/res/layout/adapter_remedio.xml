<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:id="@+id/ll_root_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Remédio: "
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_nome_remedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOME DO REMÉDIO"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Laboratório: "
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_nome_farmacia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOME DO LABORATÓRIO"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Última Alteração: "
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_data_alteracao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ÚLTIMA ALTERAÇÃO"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/corTemaAplicativo"/>
</LinearLayout>