<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.ismael.infosaude.activities.MainActivity">

    <Button
        android:id="@+id/btn_buscar_remedio"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/corContainerBusca"
        android:text="@string/btn_txt_buscar_remedio"/>

    <Button
        android:id="@+id/btn_buscar_estabelecimento"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/corContainerBusca"
        android:text="@string/btn_txt_buscar_estabelecimento"/>
</LinearLayout>
